# Application
APP_NAME="Real Astrology API"
APP_VERSION="1.0.0"
DEBUG=True
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql+asyncpg://astro:dev_password@localhost:5432/astro_dev

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT Configuration
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=30

# OAuth2 - Google
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/oauth/callback/google

# OAuth2 - GitHub
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=http://localhost:8000/api/v1/oauth/callback/github

# OAuth2 - Facebook
FACEBOOK_CLIENT_ID=your-facebook-client-id
FACEBOOK_CLIENT_SECRET=your-facebook-client-secret
FACEBOOK_REDIRECT_URI=http://localhost:8000/api/v1/oauth/callback/facebook

# Geocoding API
OPENCAGE_API_KEY=your-opencage-api-key
NOMINATIM_USER_AGENT=real-astrology/1.0

# OpenAI API (REQUIRED for chart interpretations)
# Get your API key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.7

# AWS S3 - PDF Storage
# Leave empty to disable S3 and use local storage (development mode)
# Development bucket: genesis-dev-559050210551
# Production bucket: genesis-prod-559050210551
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=genesis-dev-559050210551
S3_PREFIX=birth-charts
S3_PRESIGNED_URL_EXPIRATION=3600

# CORS
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Frontend URL (used for password reset links, email verification, etc.)
FRONTEND_URL=http://localhost:5173

# Email Configuration
# Option 1: OAuth2 - Gmail API (Recommended for Google Workspace)
# Run: uv run python scripts/get_gmail_refresh_token.py gmail_credentials.json
# GMAIL_CLIENT_ID=your-client-id.apps.googleusercontent.com
# GMAIL_CLIENT_SECRET=your-client-secret
# GMAIL_REFRESH_TOKEN=your-refresh-token
# SMTP_FROM_EMAIL=your-email@yourdomain.com

# Option 2: SMTP with App Password (Fallback)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM_EMAIL=noreply@real-astrology.com
# SMTP_USE_TLS=True

# Email Domain Restriction
# Enable domain restriction for user registration

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Swiss Ephemeris
EPHEMERIS_PATH=/usr/share/ephe

# Logging
LOG_LEVEL=INFO

# Database Backup Configuration
# Local backup directory path
BACKUP_DIR=/var/backups/astro-db
# Retention period in days (local storage after S3 upload)
BACKUP_RETENTION_DAYS=30

# AWS S3 - Backup Storage (optional, uses same AWS credentials above)
# Leave BACKUP_S3_BUCKET empty to disable S3 upload (backups will be local only)
# Recommended: Use separate bucket from PDFs for security isolation
# Development bucket: genesis-backups-dev
# Production bucket: genesis-backups-prod
BACKUP_S3_BUCKET=
BACKUP_S3_PREFIX=backups
BACKUP_S3_RETENTION_DAYS=30
BACKUP_S3_GLACIER_DAYS=30
BACKUP_S3_DELETE_DAYS=90

# Healthcheck URL for backup monitoring (optional - e.g., healthchecks.io)
BACKUP_HEALTHCHECK_URL=
BACKUP_HEALTHCHECK_FAIL_URL=
# Maximum backup age in hours before alerting
MAX_BACKUP_AGE_HOURS=26
# Minimum backup size in bytes
MIN_BACKUP_SIZE=102400
# Minimum number of backups to keep
MIN_BACKUP_COUNT=7

# GitHub API Integration (for dynamic feature list on dashboard)
# Repository in format "owner/repo"
GITHUB_REPO=lmeazzini/astro-natal-chart
# Optional: Personal access token for higher rate limits (60 -> 5000 requests/hour)
# Create at: https://github.com/settings/tokens
GITHUB_TOKEN=
# Cache TTL in seconds (default: 5 minutes)
GITHUB_FEATURES_CACHE_TTL=300
