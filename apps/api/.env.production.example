# Production Environment Configuration
# Copy this to .env in production and update with actual values

# Application
APP_NAME="Real Astrology API"
APP_VERSION="1.0.0"
DEBUG=false
ENVIRONMENT=production

# Server
HOST=0.0.0.0
PORT=8000

# Database - Use strong password in production
DATABASE_URL=postgresql+asyncpg://astro:CHANGE_ME_STRONG_PASSWORD@db:5432/astro_prod

# Redis
REDIS_URL=redis://redis:6379/0

# JWT Configuration
# IMPORTANT: Generate a strong secret key (e.g., openssl rand -hex 32)
SECRET_KEY=CHANGE_ME_GENERATE_STRONG_SECRET_KEY
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=30

# OAuth2 - Google
GOOGLE_CLIENT_ID=your-production-google-client-id
GOOGLE_CLIENT_SECRET=your-production-google-client-secret
GOOGLE_REDIRECT_URI=https://yourdomain.com/api/v1/oauth/callback/google

# OAuth2 - GitHub
GITHUB_CLIENT_ID=your-production-github-client-id
GITHUB_CLIENT_SECRET=your-production-github-client-secret
GITHUB_REDIRECT_URI=https://yourdomain.com/api/v1/oauth/callback/github

# OAuth2 - Facebook
FACEBOOK_CLIENT_ID=your-production-facebook-client-id
FACEBOOK_CLIENT_SECRET=your-production-facebook-client-secret
FACEBOOK_REDIRECT_URI=https://yourdomain.com/api/v1/oauth/callback/facebook

# Geocoding API
OPENCAGE_API_KEY=your-production-opencage-api-key
NOMINATIM_USER_AGENT=real-astrology/1.0

# Email Domain Restriction
# IMPORTANT: Enable this in production to restrict access

# Cookie Security Settings - PRODUCTION VALUES
# IMPORTANT: These settings require HTTPS
COOKIE_SECURE=true
COOKIE_HTTPONLY=true
COOKIE_SAMESITE=lax
COOKIE_DOMAIN=yourdomain.com

# CORS - Only allow your production domains
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Swiss Ephemeris
EPHEMERIS_PATH=/usr/share/ephe

# Logging
LOG_LEVEL=WARNING

# Optional: Email configuration
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=noreply@yourdomain.com
# SMTP_PASSWORD=your-smtp-password
# FROM_EMAIL=noreply@yourdomain.com
